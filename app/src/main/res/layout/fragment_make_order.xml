<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.tabs.addorder.MakeOrderFragment">

    <ImageButton
        android:id="@+id/arrow_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/orderCreation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Запись на замер"
        android:textSize="18dp"
        android:fontFamily="@font/raleway_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/orderCreation_title">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nested_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_bg_order"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/contact_info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_medium"
            android:paddingStart="20dp"
            android:paddingTop="16dp"
            android:text="Контактная информация"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_creation_order"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_bg_order"
            android:backgroundTint="@color/light_gray"
            android:padding="8dp"
            android:src="@drawable/account_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contact_info_title" />

        <EditText
            android:id="@+id/edit_creation_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:text="Artem"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/img_creation_order"
            app:layout_constraintTop_toBottomOf="@id/contact_info_title" />

        <TextView
            android:id="@+id/edit_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/raleway_medium"
            android:text="Имя"
            android:textColor="#707B81"
            app:layout_constraintStart_toEndOf="@id/img_creation_order"
            app:layout_constraintTop_toBottomOf="@id/edit_creation_order" />

        <ImageView
            android:id="@+id/img_creation_order2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_bg_order"
            android:backgroundTint="@color/light_gray"
            android:padding="8dp"
            android:src="@drawable/phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_creation_order" />

        <EditText
            android:id="@+id/edit_creation_order2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:text="+7 (999) 124 00-50"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/img_creation_order2"
            app:layout_constraintTop_toBottomOf="@id/edit_subtitle" />

        <TextView
            android:id="@+id/edit_subtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/raleway_medium"
            android:text="Номер телефона"
            android:textColor="#707B81"
            app:layout_constraintStart_toEndOf="@id/img_creation_order2"
            app:layout_constraintTop_toBottomOf="@id/edit_creation_order2" />

        <ImageView
            android:id="@+id/img_creation_order3"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_bg_order"
            android:backgroundTint="@color/light_gray"
            android:padding="8dp"
            android:src="@drawable/email_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_creation_order2" />

        <EditText
            android:id="@+id/edit_creation_order3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:text="artem@mail.ru"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/img_creation_order3"
            app:layout_constraintTop_toBottomOf="@id/edit_subtitle2" />

        <TextView
            android:id="@+id/edit_subtitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/raleway_medium"
            android:text="Email"
            android:textColor="#707B81"
            app:layout_constraintStart_toEndOf="@id/img_creation_order3"
            app:layout_constraintTop_toBottomOf="@id/edit_creation_order3" />

        <TextView
            android:id="@+id/datetime_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:text="Желаемая дата и время"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_creation_order3" />

        <ImageView
            android:id="@+id/img_creation_order4"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_bg_order"
            android:backgroundTint="@color/light_gray"
            android:padding="8dp"
            android:src="@drawable/date_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/datetime_title" />

        <TextView
            android:id="@+id/edit_creation_order4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:text="12.06.2024"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/img_creation_order4"
            app:layout_constraintTop_toBottomOf="@id/datetime_title" />

        <TextView
            android:id="@+id/edit_subtitle4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/raleway_medium"
            android:text="Дата"
            android:textColor="#707B81"
            app:layout_constraintStart_toEndOf="@id/img_creation_order4"
            app:layout_constraintTop_toBottomOf="@id/edit_creation_order4" />

        <ImageView
            android:id="@+id/img_creation_order5"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_bg_order"
            android:backgroundTint="@color/light_gray"
            android:padding="8dp"
            android:src="@drawable/time_icon"
            app:layout_constraintStart_toEndOf="@id/edit_creation_order4"
            app:layout_constraintTop_toBottomOf="@id/datetime_title" />

        <TextView
            android:id="@+id/edit_creation_order5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:text="12:30"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/img_creation_order5"
            app:layout_constraintTop_toBottomOf="@id/datetime_title" />

        <TextView
            android:id="@+id/edit_subtitle5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/raleway_medium"
            android:text="Время"
            android:textColor="#707B81"
            app:layout_constraintStart_toEndOf="@id/img_creation_order5"
            app:layout_constraintTop_toBottomOf="@id/edit_creation_order5" />

        <ImageButton
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/baseline_info_outline_24"
            app:layout_constraintTop_toTopOf="@+id/datetime_title"
            app:layout_constraintStart_toEndOf="@+id/datetime_title"
            app:layout_constraintBottom_toBottomOf="@+id/datetime_title" />

        <TextView
            android:id="@+id/address_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:text="Адресс"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_creation_order4" />

        <EditText
            android:id="@+id/edit_text_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:hint="Введите адрес"
            android:layout_marginTop="8dp"
            android:background="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/address_title" />

        <ImageButton
            android:id="@+id/my_location_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/my_location"
            android:foregroundGravity="right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/address_title" />

        <TextView
            android:id="@+id/dop_info_title"
            android:text="Дополнительная информация"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_text_address"/>

        <EditText
            android:id="@+id/edit_creation_order6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="start|top"
            android:padding="8dp"
            android:hint="Напишите какие-либо пожелания и уточнения по замеру"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dop_info_title"
            android:background="@drawable/add_icon_shape"
            android:minLines="5"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/buttons"
        android:text="Оставить заявку"
        app:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/nested_scroll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>